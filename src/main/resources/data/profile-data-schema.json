{
  "$id": "https://developer-portfolio/interests-data-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Developer Portfolio Site Profile Data",
  "description": "Define the profile of the developer.",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "location", "status", "avatarPath", "photoPath", "description", "email", "linkedin", "github", "twitter", "projects"],
  "properties": {
    "_class": {
      "description": "Spring Data deserializer class.",
      "type": "string",
      "maxLength": 64
    },
    "id": {
      "description": "A number to identify the individual profile.",
      "type": "integer"
    },
    "name": {
      "description": "The developers name.",
      "type": "string",
      "minLength": 4,
      "maxLength": 128
    },
    "location": {
      "description": "The developers general location.",
      "type": "string",
      "minLength": 4,
      "maxLength": 128
    },
    "status": {
      "description": "The developers availability.",
      "type": "string",
      "enum": ["Available", "Unavailable"]
    },
    "avatarPath": {
      "description": "Path to an avatar image.",
      "type": "string",
      "maxLength": 128
    },
    "photoPath": {
      "description": "Path to a photo.",
      "type": "string",
      "maxLength": 128
    },
    "description": {
      "description": "Short bio of the developer.",
      "type": "string",
      "maxLength": 512
    },
    "email": {
      "description": "Email address.",
      "type": "string",
      "maxLength": 256
    },
    "linkedin": {
      "description": "Linkedin URL.",
      "type": "string",
      "maxLength": 2048
    },
    "github": {
      "description": "GitHub URL.",
      "type": "string",
      "maxLength": 2048
    },
    "twitter": {
      "description": "Twitter URL.",
      "type": "string",
      "maxLength": 2048
    },
    "projects": {
      "description": "List of projects to highlight.",
      "type": "array",
      "minItems": 1,
      "maxItems": 9,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "url"],
        "properties": {
          "name": {
            "description": "The project name.",
            "type": "string",
            "maxLength": 64
          },
          "url": {
            "description": "A URL for the project.",
            "type": "string",
            "maxLength": 2048
          }
        }
      }
    }
  }
}
