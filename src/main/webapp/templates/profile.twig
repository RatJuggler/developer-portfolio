{% extends 'base.twig' %}

{% set pageName = 'index' %}
{% set titleContext = 'Profile' %}

{% block content %}
    <div class="card">
      <div class="card-header">
        <div class="btn-group float-right">
          <button type="button" class="btn btn-link" title="Add a new profile">
            <span class="fas fa-plus"></span>
          </button>
          <button type="button" class="btn btn-link" title="Edit this profile">
            <span class="far fa-edit"></span>
          </button>
          <button type="button" class="btn btn-link" title="Delete this profile">
            <span class="far fa-trash-alt"></span>
          </button>
        </div>
      </div>
      <div class="card-body">
        <form>
          <fieldset disabled>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" rows="7">
{{ profile.description }}
              </textarea>
            </div>
            <div class="row">
              <div class="form-group col-xl-6">
                <div class="row">
                  <label for="email" class="col-md-2 col-form-label">Email</label>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="email" value="{{ profile.email }}">
                  </div>
                </div>
              </div>
              <div class="form-group col-xl-6">
                <div class="row">
                  <label for="linkedin" class="col-md-2 col-form-label">LinkedIn</label>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="linkedin" value="{{ profile.linkedin }}">
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xl-6">
                <div class="row">
                  <label for="github" class="col-md-2 col-form-label">GitHub</label>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="github" value="{{ profile.github }}">
                  </div>
                </div>
              </div>
              <div class="form-group col-xl-6">
                <div class="row">
                  <label for="twitter" class="col-md-2 col-form-label">Twitter</label>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="twitter" value="{{ profile.twitter }}">
                  </div>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
{% endblock %}
