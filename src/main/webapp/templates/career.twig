{% extends 'base.twig' %}

{% set aspect = 'career' %}
{% set titleContext = 'Career' %}

{% block styles %}
{{ parent() }}
  <link rel="stylesheet" href="/css/horizontal-carousel.css">
{% endblock %}

{% block content %}
    <div id="careerCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
{% for period in data %}
        <div class="carousel-item{% if period.step == 1 %} active{% endif %}">
          <div class="card">
            <div class="card-header">
              <div class="btn-group float-right">
                <button type="button" class="btn btn-link" title="Add a new career period">
                  <span class="fas fa-plus"></span>
                </button>
                <button type="button" class="btn btn-link" title="Edit this career period">
                  <span class="far fa-edit"></span>
                </button>
                <button type="button" class="btn btn-link" title="Delete this career period">
                  <span class="far fa-trash-alt"></span>
                </button>
              </div>
            </div>
            <div class="card-body">
              <form>
                <fieldset disabled>
                  <div class="row">
                    <div class="col-md-2 text-center">
                      <div class="display-1"><span aria-hidden="true">{{ period.imagePath }}</span></div>
                    </div>
                    <div class="col-md-10">
                      <div class="row">
                        <div class="form-group col-md-2">
                          <label for="step{{ period.id }}">Step</label>
                          <input type="text" class="form-control" id="step{{ period.id }}" value="{{ period.step }}">
                        </div>
                        <div class="form-group col-md-10">
                          <label for="description{{ period.id }}">Description</label>
                          <input type="text" class="form-control" id="description{{ period.id }}" value="{{ period.description }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label>Image</label>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="imagePath{{ period.id }}">
                          <label class="custom-file-label" for="imagePath{{ period.id }}">{{ period.imagePath }}</label>
                        </div>
                      </div>
                      <div>
                        <label for="synopsis{{ period.id }}">Synopsis</label>
                        <textarea class="form-control" id="synopsis{{ period.id }}" rows="3">
{{ period.synopsis }}
                        </textarea>
                      </div>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
{% endfor %}
      </div>
      <div class="row">
        <a class="carousel-control-prev col" href="#careerCarousel" role="button" data-slide="prev">
          <span class="fas fa-angle-left text-dark" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next col" href="#careerCarousel" role="button" data-slide="next">
          <span class="fas fa-angle-right text-dark" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
{% endblock %}
