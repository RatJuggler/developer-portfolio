{
  "$id": "https://developer-portfolio/interests-data-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Developer Portfolio Site Skills Data",
  "description": "Define the skills of the developer.",
  "type": "object",
  "additionalProperties": false,
  "required": ["skills"],
  "properties": {
    "skills": {
      "description": "The skills of a developer.",
      "type": "array",
      "minItems": 1,
      "maxItems": 999,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "category", "skill", "description"],
        "properties": {
          "id": {
            "description": "A number to identify the individual interest.",
            "type": "integer"
          },
          "type": {
            "description": "The skill type.",
            "type": "string",
            "enum": ["Core", "Proficient", "Familiar"]
          },
          "category": {
            "description": "What category the skill comes under.",
            "type": "string",
            "minLength": 4,
            "maxLength": 64
          },
          "skill": {
            "description": "A brief description of the skill.",
            "type": "string",
            "minLength": 3,
            "maxLength": 64
          },
          "description": {
            "description": "A more detailed description of the skill.",
            "type": "string",
            "maxLength": 512
          }
        }
      }
    }
  }
}
