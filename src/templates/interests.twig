{% extends 'base.twig' %}

{% set titleContext = 'Interests' %}

{% block styles %}
{{ parent() }}
  <link rel="stylesheet" href="css/vertical-carousel.css">
{% endblock %}

{% block content %}
    <div id="interestsCarousel" class="vertical carousel slide" data-ride="carousel">
      <a class="carousel-control-prev w-auto" href="#interestsCarousel" role="button" data-slide="prev">
        <span class="fas fa-angle-up text-dark" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <div class="carousel-inner">
{% for interest in data.interests %}
        <div class="carousel-item{% if interest.id == 1 %} active{% endif %}">
          <div class="card">
            <div class="card-header">
              <div class="btn-group float-right">
                <button type="button" class="btn btn-link" title="Add a new interest">
                  <span class="fas fa-plus"></span>
                </button>
                <button type="button" class="btn btn-link" title="Edit this interest">
                  <span class="far fa-edit"></span>
                </button>
                <button type="button" class="btn btn-link" title="Delete this interest">
                  <span class="far fa-trash-alt"></span>
                </button>
              </div>
            </div>
            <div class="card-body">
              <form>
                <fieldset disabled>
                  <div class="row">
                    <div class="col-md-4">
                      <img class="card-img-top img-fluid" src="{{ interest.image }}" alt="{{ interest.interest }}">
                    </div>
                    <div class="col-md-8">
                      <div class="form-group">
                        <label for="interest{{ interest.id }}">Interest</label>
                        <input type="text" class="form-control" id="interest{{ interest.id }}" value="{{ interest.interest }}">
                      </div>
                      <div class="form-group">
                        <label>Image</label>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="image{{ interest.id }}">
                          <label class="custom-file-label" for="image{{ interest.id }}">filename</label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="mt-3">
                    <label for="description{{ interest.id }}">Description</label>
                    <textarea class="form-control" id="description{{ interest.id }}" rows="3">
{{ interest.description }}
                    </textarea>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
{% endfor %}
      </div>
      <a class="carousel-control-next w-auto" href="#interestsCarousel" role="button" data-slide="next">
        <span class="fas fa-angle-down text-dark" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
{% endblock %}
