<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">

  <title>{{ profile.name }} - {{ titleContext }}</title>
  <meta name="keywords" content="{{ profile.name }}, Developer, Portfolio, {{ titleContext }}" />
  <meta name="description" content="Developer portfolio website for {{ profile.name }}">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

  <meta name="og:url" content="">
  <meta name="og:title" content="{{ profile.name }}">
  <meta name="og:type" content="website">
  <meta name="og:description" content="Developer portfolio website for {{ profile.name }}.">
  <meta name="og:image" content="">

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="img/apple-touch-icon.png">

{% block styles %}
  <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="vendor/fontawesome-free/css/all.css">
  <link rel="stylesheet" href="css/main.css">
{% endblock %}

  <meta name="theme-color" content="#b833c0">
</head>

<body>

  <header>
    <nav class="navbar fixed-top navbar-expand-md navbar-light bg-light">
      <a class="navbar-brand" href="#">
        <img src="{{ profile.avatar }}" width="30" height="30" class="d-inline-block align-top" alt="My profile avatar">
        Portfolio
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainMenu" aria-controls="mainMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mainMenu">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="projectMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="fas fa-file-code" aria-hidden="true"></span>
              <span>Projects</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="projectMenu">
{% for project in profile.projects %}
              <a class="dropdown-item" href="{{ project.url }}">{{ project.name }}</a>
{% endfor %}
            </div>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="#" target="_blank" title="Open in new tab">
              <span class="fas fa-home" aria-hidden="true"></span>
              <span>Home</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" title="Settings">
              <span class="fas fa-cog" aria-hidden="true"></span>
              <span>Settings</span>
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="accountMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="fas fa-user" aria-hidden="true"></span>
              <span>My Account</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="accountMenu">
              <span class="dropdown-header">{{ profile.name }}</span>
              <div class="dropdown-divider"></div>
              <button type="button" class="dropdown-item btn btn-link" data-toggle="modal" data-target="#signOutConfirmation">Sign out</button>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <section>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <div class="row">
          <div class="col-md-3 mb-3">
            <span class="spotlight"><img src="{{ profile.photo }}" alt="{{ profile.name }}" /></span>
            <nav id="contactList" class="navbar-expand navbar-light">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="mailto:{{ profile.email }}?subject=Developer%20Profile" target="_blank" rel="noopener noreferrer" title="E-mail">
                    <span class="fas fa-at" aria-hidden="true"></span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ profile.linkedin }}" title="LinkedIn">
                    <span class="fab fa-linkedin" aria-hidden="true"></span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ profile.github }}" title="Github">
                    <span class="fab fa-github-square" aria-hidden="true"></span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ profile.twitter }}" title="Twitter">
                    <span class="fab fa-twitter-square" aria-hidden="true"></span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <div class="col-md-9">
            <form>
              <fieldset disabled>
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" id="name" value="{{ profile.name }}">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-8">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" value="{{ profile.location }}">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="status">Status</label>
                    <select class="form-control" id="status">
                      <option selected>Available</option>
                      <option>Engaged</option>
                    </select>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

{% block content %}{% endblock %}

{% include 'footer.twig' %}

  <div class="modal fade" id="signOutConfirmation" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="signOutConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signOutConfirmationLabel">Sign Out Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to sign out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No, take me back</button>
          <a href="/" class="btn btn-primary" role="button" aria-pressed="true">Yes, sign me out</a>
        </div>
      </div>
    </div>
  </div>

{% block scripts %}
  <script src="js/vendor/modernizr-3.11.2.min.js"></script>
  <script src="vendor/jquery/jquery.js"></script>
  <script src="vendor/popper/popper.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.js"></script>
  <script src="js/plugins.js"></script>
  <script src="js/main.js"></script>
{% endblock %}

</body>

</html>
