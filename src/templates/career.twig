{% extends 'base.twig' %}

{% set pageName = 'career' %}
{% set titleContext = 'Career' %}

{% block styles %}
{{ parent() }}
  <link rel="stylesheet" href="css/horizontal-carousel.css">
{% endblock %}

{% block content %}
    <div id="careerCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
{% for period in data.career %}
        <div class="carousel-item{% if period.sequence == 1 %} active{% endif %}">
          <div class="card">
            <div class="card-header">
              <div class="btn-group float-right">
                <button type="button" class="btn btn-link" title="Add a new career period">
                  <span class="fas fa-plus"></span>
                </button>
                <button type="button" class="btn btn-link" title="Edit this career period">
                  <span class="far fa-edit"></span>
                </button>
                <button type="button" class="btn btn-link" title="Delete this career period">
                  <span class="far fa-trash-alt"></span>
                </button>
              </div>
            </div>
            <div class="card-body">
              <form>
                <fieldset disabled>
                  <div class="row">
                    <div class="col-md-2 text-center">
                      <div class="display-1"><span aria-hidden="true">{{ period.image }}</span></div>
                    </div>
                    <div class="col-md-10">
                      <div class="row">
                        <div class="form-group col-md-2">
                          <label for="sequence{{ period.id }}">Sequence</label>
                          <input type="text" class="form-control" id="sequence{{ period.id }}" value="{{ period.sequence }}">
                        </div>
                        <div class="form-group col-md-10">
                          <label for="period{{ period.id }}">Period</label>
                          <input type="text" class="form-control" id="period{{ period.id }}" value="{{ period.period }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label>Image</label>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="image{{ period.id }}">
                          <label class="custom-file-label" for="image{{ period.id }}">filename</label>
                        </div>
                      </div>
                      <div>
                        <label for="synopsis{{ period.id }}">Synopsis</label>
                        <textarea class="form-control" id="synopsis{{ period.id }}" rows="3">
{{ period.synopsis }}
                        </textarea>
                      </div>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
{% endfor %}
      </div>
      <div class="row">
        <a class="carousel-control-prev col" href="#careerCarousel" role="button" data-slide="prev">
          <span class="fas fa-angle-left text-dark" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next col" href="#careerCarousel" role="button" data-slide="next">
          <span class="fas fa-angle-right text-dark" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
{% endblock %}
